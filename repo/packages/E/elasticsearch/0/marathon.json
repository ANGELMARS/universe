{
  "id": "elasticsearch",
  "cpus": "0.2",
  "mem": "512",
  "instances": "1",
  "args": ["-m", "{{mesos.master}}", "-n", "{{elasticsearch.instances}}", "-d", "-nn", "{{hdfs.namenode}}"],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesos/elasticsearch-scheduler",
      "network": "HOST"
    }
  }
}
