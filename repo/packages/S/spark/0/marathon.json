{
  "id": "spark",
  "cpus": 1,
  "mem": 1024,
  "instances": 1,
  "cmd": "mv /mnt/mesos/sandbox/log4j.properties conf/log4j.properties && ./bin/spark-class org.apache.spark.deploy.mesos.MesosClusterDispatcher --port {{spark/port}} --webui-port {{spark/webui-port}} --master {{spark/mesos-master}} --zk {{spark/zookeeper}} --host {{spark/host}}",
  "uris": [
    "http://downloads.mesosphere.com.s3.amazonaws.com/assets/spark/log4j.properties"
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/spark:1.4.0-SNAPSHOT",
      "network": "HOST"
    }
  }
}
