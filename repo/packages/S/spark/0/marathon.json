{
  "id": "spark",
  "cpus": 1,
  "mem": 1024,
  "instances": 1,
  "cmd": "mv /mnt/mesos/sandbox/log4j.properties conf/log4j.properties && ./bin/spark-class org.apache.spark.deploy.mesos.MesosClusterDispatcher --port $PORT0 --webui-port $PORT1 --master {{spark/mesos-master}} --zk {{spark/zookeeper}} --host {{spark/host}}",
  "uris": [
    "http://downloads.mesosphere.com.s3.amazonaws.com/assets/spark/log4j.properties"
  ],
  "ports": [
    0,
    0
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/spark:1.4.0-SNAPSHOT-1cb86c7",
      "network": "HOST"
    }
  },
  "healthChecks": [
    {
      "path": "/",
      "portIndex": 1,
      "protocol": "HTTP",
      "gracePeriodSeconds": 5,
      "intervalSeconds": 60,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ]
}
