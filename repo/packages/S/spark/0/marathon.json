{
  "id": "spark",
  "cpus": 1,
  "mem": 1024,
  "instances": 1,
  "cmd": "mkdir /etc/hadoop; mv /mnt/mesos/sandbox/*.xml /etc/hadoop && mv /mnt/mesos/sandbox/log4j.properties conf/log4j.properties && ./bin/spark-class org.apache.spark.deploy.mesos.MesosClusterDispatcher --port $PORT0 --webui-port $PORT1 --master {{mesos.master}} --zk {{spark.zookeeper}} --host {{spark.host}} --name {{spark.framework-name}}",
  "uris": [
    "http://downloads.mesosphere.com.s3.amazonaws.com/assets/spark/log4j.properties",
    "https://raw.githubusercontent.com/mesosphere/hdfs/master/example-conf/mesosphere-dcos/core-site.xml",
    "https://raw.githubusercontent.com/mesosphere/hdfs/master/example-conf/mesosphere-dcos/hdfs-site.xml",
    "https://github.com/mesosphere/hdfs/blob/master/example-conf/mesosphere-dcos/mesos-site.xml"
  ],
  "env": {
    "APPLICATION_WEB_PROXY_BASE": "/service/spark",
    "SPARK_USER": "root"
  },
  "ports": [
    0,
    0
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/spark:1.4.0-rc4",
      "network": "HOST"
    }
  },
  "healthChecks": [
    {
      "path": "/",
      "portIndex": 1,
      "protocol": "HTTP",
      "gracePeriodSeconds": 5,
      "intervalSeconds": 60,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ]
}
