{
  "id": "kafka",
  "cpus": 0.5,
  "mem": 256,
  "instances": 1,
  "cmd": "java -jar kafka-mesos*.jar scheduler --master={{master}} --zk={{zk}} --api={{api}} --storage={{storage}} {{otherOptions}}",
  "uris": ["{{image}}"],
  "ports": [0],
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/api/brokers/status",
      "gracePeriodSeconds": 120,
      "intervalSeconds": 60,
      "portIndex": 0,
      "timeoutSeconds": 30,
      "maxConsecutiveFailures": 3
    }
  ]
}
