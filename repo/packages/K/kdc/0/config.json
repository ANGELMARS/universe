{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "service": {
            "type": "object",
            "properties": {
                "name": {
                    "default": "kdc",
                    "type": "string"
                }
            }
        },
        "kdc": {
            "type": "object",
            "properties": {
                "docker_image": {
                    "description": "The URI of the Spark docker image to use in spark.mesos.executor.docker.image",
                    "type": "string",
                    "default": "mesosphere/kdc"
                }
            },
            "required": [
                "docker_image"
            ]
        },
        "users": {
          "type": "object",
          "properties": {
              "user1": {
                  "type": "string",
                  "default": "hdfs/journalnode1.hdfs.mesos@LOCAL:secret"
              },
              "user2": {
                  "type": "string",
                  "default": "hdfs/namenode1.hdfs.mesos@LOCAL:secret"
              },
              "user3": {
                  "type": "string",
                  "default": "hdfs/namenode2.hdfs.mesos@LOCAL:secret"
              },
              "user4": {
                  "type": "string",
                  "default": "HTTP/journalnode1.hdfs.mesos@LOCAL:secret"
              },
              "user5": {
                  "type": "string",
                  "default": "HTTP/namenode1.hdfs.mesos@LOCAL:secret"
              },
              "user6": {
                  "type": "string",
                  "default": "HTTP/namenode2.hdfs.mesos@LOCAL:secret"
              },
              "tab1" : {
                "type": "string",
                "default": "hdfs/journalnode1.hdfs.mesos@LOCAL:hdfs.keytab"
              },
              "tab2" : {
                "type": "string",
                "default": "hdfs/namenode1.hdfs.mesos@LOCAL:hdfs.keytab"
              },
              "tab3" : {
                "type": "string",
                "default": "hdfs/namenode2.hdfs.mesos@LOCAL:hdfs.keytab"
              },
              "tab4" : {
                "type": "string",
                "default": "HTTP/journalnode1.hdfs.mesos@LOCAL:hdfs.keytab"
              },
              "tab5" : {
                "type": "string",
                "default": "HTTP/namenode1.hdfs.mesos@LOCAL:hdfs.keytab"
              },
              "tab6" : {
                "type": "string",
                "default": "HTTP/namenode2.hdfs.mesos@LOCAL:hdfs.keytab"
              }
          }
        }
    }
}
