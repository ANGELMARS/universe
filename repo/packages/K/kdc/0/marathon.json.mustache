{
  "id":"{{service.name}}",
  "instances":1,
  "cpus":1,
  "mem":128,
  "env":{
    "PRINCIPAL_hdfs":"hdfs@LOCAL:secret",
    "PRINCIPAL_hdfs1":"hdfs/namenode1.hdfs.mesos@LOCAL:secret",
    "PRINCIPAL_hdfs2":"hdfs/namenode2.hdfs.mesos@LOCAL:secret",
    "PRINCIPAL_tester":"tester@LOCAL:secret",
    "PRINCIPAL_http1" : "HTTP/namenode1.hdfs.mesos@LOCAL:secret",
    "PRINCIPAL_http2" : "HTTP/namenode2.hdfs.mesos@LOCAL:secret",
    "KEYTAB_hdfs":"hdfs@LOCAL:hdfs.keytab",
    "KEYTAB_hdfs1" : "hdfs/namenode1.hdfs.mesos@LOCAL:hdfs.keytab",
    "KEYTAB_hdfs2" : "hdfs/namenode2.hdfs.mesos@LOCAL:hdfs.keytab",
    "KEYTAB_http1" : "HTTP/namenode1.hdfs.mesos@LOCAL:hdfs.keytab",
    "KEYTAB_http2" : "HTTP/namenode2.hdfs.mesos@LOCAL:hdfs.keytab",
    "KEYTAB_tester":"tester@LOCAL:tester.keytab"
  },
  "container":{
    "type":"DOCKER",
    "docker":{
      "image":"{{kdc.docker_image}}",
      "network":"BRIDGE",
      "forcePullImage":true,
      "parameters":[
        {
          "key":"publish",
          "value":"88:88/udp"
        },
        {
          "key":"publish",
          "value":"88:88/tcp"
        },
        {
          "key":"publish",
          "value":"8000:8000/tcp"
        }
      ]
    }
  }
}
